@model QuanLyNhanSu.Models.tblQuyen

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="headerh2">Xóa tài khoản</h2>

<h3>Bạn có chắc muốn xóa tài khoản này?</h3>
<div class="px-md-5">
    <dl class="dl-horizontal">
        <dt>
            Tên Quyền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenQuyen)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận xóa" class="btn btn-success" /> |
            @Html.ActionLink("Back to List", "Index",new { @class="btn btn-success"})
        </div>
    }
</div>
