@model PagedList.IPagedList<QuanLyNhanSu.Models.tblThongTinNV>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="headerh2" style="text-align:center">Danh sách nhân viên</h2>

<p class="px-md-4">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
<form asp-action="Index" method="get" class="form-inline px-md-4 pt-2" style="width:50%; display:flex">
    <input class="form-control" name="name" placeholder="Nhập tên nhân viên..." type="text">
    <button class="btn btn-primary" type="submit">
        <i class="fas fa-search"></i>
    </button>
</form>
<form class="px-md-4">
    <table class="table">
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>Phòng</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChucVu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblPhong.TenPhong)
                </td>
                <td>
                    <a href="@Url.Action("Edit","QLNhanVien", new { id = item.MaNV})">
                        <i class="fa-sharp fa-regular fa-pen-to-square fa-2x"></i>
                    </a>&nbsp;
                    <a href="@Url.Action("Details","QLNhanVien", new { id = item.MaNV})">
                        <i class="fa-sharp fa-solid fa-calendar-week fa-2x"></i>
                    </a>&nbsp;
                    <a href="@Url.Action("Delete","QLNhanVien", new { id = item.MaNV})">
                        <i class="fa-sharp fa-solid fa-trash fa-2x"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
</form>

<div class="pagination px-md-4 pt-2">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, @class = "pagination" }))
</div>
