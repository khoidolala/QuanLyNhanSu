
@{
    ViewBag.Title = "NghiPhep";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<form style="padding: 100px" action="/QLNhanVien/NghiPhep" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Ngày bắt đầu</label>
            <input type="date" class="form-control" id="start">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Ngày kết thúc</label>
            <input type="date" class="form-control" id="end">
        </div>
        <div class="form-group col-md-6 mt-2">
            <button type="submit" class="btn btn-primary">Gửi</button>
        </div>
    </div>
</form>
<script>
    var today = new Date();
    var start = new Date(today.setDate(today.getDate() + 1)).toISOString().split('T')[0];
    var end = new Date(today.setDate(today.getDate() + 1)).toISOString().split('T')[0];
    document.getElementById("start").setAttribute('min', start);
    document.getElementById("end").setAttribute('min', end);
</script>
