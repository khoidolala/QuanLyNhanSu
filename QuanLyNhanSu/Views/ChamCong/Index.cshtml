@model IEnumerable<QuanLyNhanSu.Models.tblChamCong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="headerh2">Danh sách chấm công</h2>

<table class="table">
    <tr>
        <th>
            Họ và tên
        </th>
        <th>
            Ngày
        </th>
        <th>
            Thời gian vào
        </th>
        <th>
            Thời gian ra
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiGianVao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiGianRa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
